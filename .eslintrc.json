{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"overrides": [],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react"],

	"ignorePatterns": ["**/*.css", "**/*.scss"],
	"rules": {
		"react/jsx-uses-react": "error",
		"no-mixed-spaces-and-tabs": "off",
		"react/jsx-uses-vars": "error"
	}
}
